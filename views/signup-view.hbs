{{> welcome-menu active="signup"}}

<section class="section">
  <div class="container">
    <div class="columns is-vcentered">
      
      <!-- Left column has image -->
      <div class="column is-half">
        <figure class="image">
          <img src="https://cdn.glitch.global/15a2efd3-f840-49ac-a10b-ac8fe4da5196/weather.png?v=1724031538687" alt="Weather Icons">
        </figure>
      </div>

      <!-- Right column is the signup form -->
      <div class="column is-half">
        <h1 class="title">Sign up</h1>
        <form action="/register" method="POST">
          <label class="label">Name</label>
          <div class="field is-horizontal">
            <div class="field-body">
              <div class="field">
                <input class="input" type="text" placeholder="Enter first name" name="firstName">
              </div>
              <div class="field">
                <input class="input" type="text" placeholder="Enter last name" name="lastName">
              </div>
            </div>
          </div>
          <div class="field">
            <label class="label">Email</label>
            <input class="input" type="text" placeholder="Enter email" name="email">
          </div>
          <div class="field">
            <label class="label">Password</label>
            <input class="input" type="password" placeholder="Enter Password" name="password">
          </div>
          <div class="field is-grouped">
            <button class="button is-link">Submit</button>
          </div>
        </form>
      </div>

    </div>
  </div>
</section>
